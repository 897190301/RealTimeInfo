<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/tab_bg">


    <LinearLayout
        android:id="@+id/ll_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/news_check"/>
        <TextView
            android:id="@+id/tv_news"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/home_tab_text_check"
            android:text="新闻"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/weather_uncheck"/>
        <TextView
            android:id="@+id/tv_weather"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/home_tab_text"
            android:text="天气"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_film"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/film_uncheck"/>
        <TextView
            android:id="@+id/tv_film"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/home_tab_text"
            android:text="电影"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_me"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/me_uncheck"/>
        <TextView
            android:id="@+id/tv_me"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/home_tab_text"
            android:text="我"/>
    </LinearLayout>

</LinearLayout>
